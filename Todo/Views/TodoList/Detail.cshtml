@using Todo.Controllers
@using Todo.Data.Entities
@using Todo.Services
@model Todo.Models.TodoLists.TodoListDetailViewmodel

@{
    ViewData["Title"] = $"List: {Model.Title}";
}

<h2>@ViewData["Title"]</h2>

<div class="col-md-6">

    <ul class="list-inline action-buttons">
        <li>
            <a asp-action="Create" asp-controller="TodoItem" asp-route-todoListId="@Model.TodoListId">
                <strong>Add New Item</strong>|
            </a>
        </li>
        <li>
            <a asp-action="FilterTodoItems" asp-controller="TodoList" 
               asp-route-todoListId="@Model.TodoListId" 
               asp-route-hideCompletedTasks="@(!Model.Filters.HideCompletedTasks)" 
               asp-route-orderByDecendingRank="@Model.Filters.OrderByDescendingRank"
               asp-route-orderByDescendingImportance="@Model.Filters.OrderByDescendingImportance">
                <strong>@(Model.Filters.HideCompletedTasks ? "Include" : "Exclude") Completed Tasks</strong>|
            </a>
        </li>
        <li>
            <a asp-action="FilterTodoItems" asp-controller="TodoList" 
               asp-route-todoListId="@Model.TodoListId" 
               asp-route-orderByDecendingRank="@(!Model.Filters.OrderByDescendingRank)" 
               asp-route-hideCompletedTasks="@(Model.Filters.HideCompletedTasks)"
               asp-route-orderByDescendingImportance="@Model.Filters.OrderByDescendingImportance">
                <strong>@(Model.Filters.OrderByDescendingRank ? "Ascending" : "Descending") Rank</strong>
            </a>
        </li>
        <li>
            <a asp-action="FilterTodoItems" asp-controller="TodoList" 
               asp-route-todoListId="@Model.TodoListId" 
               asp-route-orderByDescendingImportance="@(!Model.Filters.OrderByDescendingImportance)"
               asp-route-orderByDecendingRank="@Model.Filters.OrderByDescendingRank" 
               asp-route-hideCompletedTasks="@Model.Filters.HideCompletedTasks">
                <strong>@(Model.Filters.OrderByDescendingImportance ? "Ascending" : "Descending") Importance</strong>
            </a>
        </li>
    </ul>

    <ul class="list-group">

        @foreach (var item in Model.Items)
        {
            string contextualClass;
            switch (item.Importance)
            {
                case Importance.High:
                    contextualClass = "list-group-item-danger";
                    break;
                case Importance.Low:
                    contextualClass = "list-group-item-info";
                    break;
                default:
                    contextualClass = "";
                    break;
            }

            <li class="list-group-item @contextualClass">

                <div class="row">

                    <div class="col-md-8">
                        <a asp-action="Edit" asp-controller="TodoItem" asp-route-todoItemId="@item.TodoItemId">
                            @if (item.IsDone)
                            {
                                <s>@item.Title</s>
                            }
                            else
                            {
                                <text>@item.Title</text>
                            }
                        </a><br />
                        <text>Rank: </text><strong>@(item.Rank > 0 ? item.Rank.ToString() : "None")</strong>

                    </div>

                    <div class="col-md-4 text-right">
                        <small>
                            @item.ResponsibleParty.UserName

                            <img src="https://www.gravatar.com/avatar/@Gravatar.GetHash(item.ResponsibleParty.Email)?s=30" />

                        </small>
                    </div>
                </div>

            </li>
        }
    </ul>
</div>